version: '3.5'

services:
  db:
    image: mysql:5.7
    volumes:
      - db-data:/var/lib/mysql
      - ./wordpress/dbinit:/docker-entrypoint-initdb.d
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: somewordpresspassword
      MYSQL_DATABASE: maindb
      MYSQL_USER: wordpress
      MYSQL_PASSWORD: wordpress
  
  nginxplus:
    build: ./nginxplus/
    volumes:
      - "./nginxplus/config:/etc/nginx/conf.d"
    ports:
      - "80:80"
      - "443:443"

  wordpress1:
    depends_on:
      - db
    build: ./wordpress/
    volumes:
      - "site-data1:/var/www/wp-content"
    ports:
      - "8001:80"
    environment:
      DB_HOST: db
      DB_PASSWORD: wordpress
      DB_NAME: wp1
      DB_USER: wordpress
      WORDPRESS_SITE_URL: http://localhost
      FS_METHOD: direct
      # For debugging only:
      #WP_DEBUG: "true"
      #WP_DEBUG_DISPLAY: "true"

  wordpress2:
    depends_on:
      - db
    build: ./wordpress/
    volumes:
      - "site-data2:/var/www/wp-content"
    ports:
      - "8002:80"
    environment:
      DB_HOST: db
      DB_PASSWORD: wordpress
      DB_NAME: wp2
      DB_USER: wordpress
      WORDPRESS_SITE_URL: http://localhost
      FS_METHOD: direct
      # For debugging only:
      #WP_DEBUG: "true"
      #WP_DEBUG_DISPLAY: "true"

  wordpress3:
    depends_on:
      - db
    build: ./wordpress/
    volumes:
      - "site-data3:/var/www/wp-content"
    ports:
      - "8003:80"
    environment:
      DB_HOST: db
      DB_PASSWORD: wordpress
      DB_NAME: wp3
      DB_USER: wordpress
      WORDPRESS_SITE_URL: http://localhost
      FS_METHOD: direct
      # For debugging only:
      #WP_DEBUG: "true"
      #WP_DEBUG_DISPLAY: "true"

  wordpress4:
    depends_on:
      - db
    build: ./wordpress/
    volumes:
      - "site-data4:/var/www/wp-content"
    ports:
      - "8004:80"
    environment:
      DB_HOST: db
      DB_PASSWORD: wordpress
      DB_NAME: wp4
      DB_USER: wordpress
      WORDPRESS_SITE_URL: http://localhost
      FS_METHOD: direct
      # For debugging only:
      #WP_DEBUG: "true"
      #WP_DEBUG_DISPLAY: "true"

  wordpress5:
    depends_on:
      - db
    build: ./wordpress/
    volumes:
      - "site-data5:/var/www/wp-content"
    ports:
      - "8005:80"
    environment:
      DB_HOST: db
      DB_PASSWORD: wordpress
      DB_NAME: wp5
      DB_USER: wordpress
      WORDPRESS_SITE_URL: http://localhost
      FS_METHOD: direct
      # For debugging only:
      #WP_DEBUG: "true"
      #WP_DEBUG_DISPLAY: "true"

  adminer:
    depends_on:
      - db
    image: adminer
    restart: always
    ports:
        - 8080:8080

volumes:
  db-data:
  site-data1:
  site-data2:
  site-data3:
  site-data4:
  site-data5:

networks:
  default:
    driver: bridge
    ipam:
        driver: default
        config:
        - subnet: 192.168.91.0/24
